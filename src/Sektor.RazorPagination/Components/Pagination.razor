@if (Visible)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (_totalPages > 1)
            {
                <li @onclick="() => OnSelectedPage(_firstLink)" style="cursor: pointer;" class="page-item @(_firstLink.Enabled ? null : "disabled")">
                    <span class="page-link" href="#"><i class='bi bi-arrow-left-short'></i>@_firstLink.Text</span>
                </li>
            }
            @if (_currentPage != 1)
            {
                <li @onclick="() => OnSelectedPage(_prevLink)" style="cursor: pointer;" class="page-item @(_prevLink.Enabled ? null : "disabled")">
                    <span class="page-link" href="#"><i class='bi bi-arrow-left-short'></i>@_prevLink.Text</span>
                </li>
            }
            @foreach (var link in _pageLinks)
            {
                <li @onclick="() => OnSelectedPage(link)" style="cursor: pointer;" class="page-item @(link.Enabled ? null : "disabled") @(link.Active ? "active" : null)">
                    <span class="page-link" href="#">@link.Text</span>
                </li>
            }
            @if (_currentPage != _totalPages)
            {
                <li @onclick="() => OnSelectedPage(_nextLink)" style="cursor: pointer;" class="page-item @(_nextLink.Enabled ? null : "disabled")">
                    <span class="page-link" href="#"><i class='bi bi-arrow-right-short'></i>@_nextLink.Text</span>
                </li>
            }
            @if (_totalPages > 1)
            {
                <li @onclick="() => OnSelectedPage(_lastLink)" style="cursor: pointer;" class="page-item @(_lastLink.Enabled ? null : "disabled")">
                    <span class="page-link" href="#"><i class='bi bi-arrow-left-short'></i>@_lastLink.Text</span>
                </li>
            }
        </ul>
    </nav>
}

